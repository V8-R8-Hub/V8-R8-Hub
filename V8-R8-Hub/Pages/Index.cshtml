@page
@model IndexModel
@{
}

<html>
<head>
    <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>
    <script src="https://unpkg.com/aframe-event-set-component@5/dist/aframe-event-set-component.min.js"></script>
    <script src="https://unpkg.com/aframe-layout-component@5.3.0/dist/aframe-layout-component.min.js"></script>
    <script src="https://unpkg.com/aframe-template-component@3.2.1/dist/aframe-template-component.min.js"></script>
    <script src="https://unpkg.com/aframe-proxy-event-component@2.1.0/dist/aframe-proxy-event-component.min.js"></script>
    <script src="~/js/aframe-rounded-component.js" asp-append-version="true"></script>
    <script src="~/js/UtilityFunctions.js" asp-append-version="true"></script>
    <script src="~/js/GameHub/GameEventListenerHandler.js" asp-append-version="true"></script>
</head>
<body>
    <div id="cookiepopup"
        style="  border: 5px solid; position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%);padding: 10px;width: 50%;height: 50%;background-color: white;z-index: +1;">
        <h1 style="text-align: center;">By accepting cookies, you agree that the software group owns your
            personal data and may use cookies to collect and store data about your performance</h1>
        <button style="background-color: black; color: white; width: 10vw; height: 5vw; margin-left: 30%; margin-top: 5%;" onclick="RemovePopup()">Accept</button>
        <button style="background-color: black; color: white; width: 10vw; height: 5vw;"  onclick="RemovePopup()">Reject</button>
    </div>
    <a-scene id="main-scene">
        <a-assets>
        </a-assets>
        <a-entity id="cameraRig" position="0 1 2" rotation="0 0 0">
            <a-entity id="camera" camera look-controls wasd-controls="acceleration:100">
                <a-cursor></a-cursor>
            </a-entity>
        </a-entity>
        <a-entity id="overallTemplate" template="src: @Url.Content("~/components/menu.html")"></a-entity>
    </a-scene>
    <script src="~/js/index.js" asp-append-version="true"></script>
</body>
</html>